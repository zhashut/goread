<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Night mode). -->
    <style name="Theme.goread" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Make system bars transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <!-- Ensure navigation bar icons are light in dark mode -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Enable translucent status bar for overlay mode (required by tauri-plugin-status-bar) -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Draw behind system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Dark status bar (light icons) for dark theme -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Handle display cutout -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>
</resources>
