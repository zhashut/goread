{
  "$schema": "../gen/schemas/mobile-schema.json",
  "identifier": "mobile-capability",
  "description": "Capability for mobile targets",
  "platforms": ["iOS", "android"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "dialog:default"
  ],
  "paths": [
    "$DESKTOP/**",
    "$DOCUMENTS/**",
    "$DOWNLOAD/**",
    "$HOME/Documents/**",
    "$HOME/Downloads/**"
  ]
}
