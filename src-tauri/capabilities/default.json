{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "dialog:default",
    "os:allow-locale"
  ],
  "paths": [
    "$DESKTOP/**",
    "$DOCUMENTS/**",
    "$DOWNLOAD/**",
    "$HOME/Documents/**",
    "$HOME/Downloads/**"
  ]
}
